
<template>
  <view class="container home" @touchend="touchend">
    <scroll-view class="home-scroll-wrap"
                 scroll-y
                 scroll-with-animation
                 lower-threshold="5"
                 @scroll="onScroll"
                 @scrolltolower="bindScrolltolower">
      <view class="home-header">
        <view class="home-select-class"
              @tap="bindClick">
          <text>{{gradeName}}</text>
          <van-icon name="arrow-down" />
        </view>
        <view class="home-num">
          <text class="home-num-title">{{num}}份</text>
          <text class="home-num-text">已收录获课资料库</text>
        </view>
      </view>
      <view class="home-banner">
        <swiper autoplay
                circular>
          <block wx:for="{{bannerList}}"
                 wx:key="index">
            <swiper-item>
              <image mode="widthFix"
                     class="home-banner-img"
                     src="{{item.url}}" />
            </swiper-item>
          </block>
        </swiper>
      </view>
      <view class="home-content-ref"
            style="height:{{height}}px">
        <view class="home-content-wrap ">
          <view class="home-tab">
            <van-tabs active="{{ active }}"
                      @click="bindClickTab"
                      color="#FB9645"
                      border="{{false}}"
                      line-width="{{14}}">
              <van-tab wx:for="{{subjectList}}"
                       wx:key="{{item.id}}"
                       title="{{item.name}}"></van-tab>
            </van-tabs>
          </view>
          <view class="home-classify van-hairline--bottom">
            <scroll-view scroll-x
                         scroll-left="{{scrollLeft}}"
                         scroll-with-animation>
              <view class="home-classify-scroll ">
                <view class="home-classify-item {{item.id == catalogId ? 'active' : ''}}"
                      wx:for="{{catalogList}}"
                      @tap="bindClickCatalog({{item.id}})"
                      wx:key="{{item.id}}">{{item.name}}</view>
              </view>
            </scroll-view>
          </view>
          <view class="home-sort">
            <view class="home-sort-left">
              <view class="home-sort-popular {{pagination.hot ? 'active' : ''}}"
                    @tap="bindClickSort({{1}})">
                <text>热门排序</text>
                <image src="https://pub.file.k12.vip/zlk_weapp/zlk/index-icon-sort.png" />
              </view>
              <view class="home-sort-newest {{pagination.newly ? 'active' : ''}}"
                    @tap="bindClickSort({{0}})">
                <text>最新排序</text>
                <image src="https://pub.file.k12.vip/zlk_weapp/zlk/index-icon-sort.png" />
              </view>
            </view>
            <view class="home-sort-right"
                  @tap="bindClickSearch">
              <image src="https://pub.file.k12.vip/zlk_weapp/zlk/index-icon-search.png" />
              <text>搜索</text>
            </view>
          </view>
          <scroll-view class="home-scroll"
                       upper-threshold="5"
                       @scroll="onScroll"
                       @scrolltoupper="bindScrolltoupper"
                       @scrolltolower="bindLoadItem"
                       scroll-top="{{scrollTop}}"
                       scroll-y="{{isScrollY}}"
                       scroll-with-animation>
            <view class="bus">
              <noDataTemplate wx:if="{{isEmpty}}"
                              :info="emptyInfo"></noDataTemplate>
              <repeat for="{{materialList}}"
                      key="index"
                      index="index">
                <view class="home-item {{ (index < page ) ? 'common-animate' : ''}}"
                      style="{{'transition-delay:' + index * 0.1 + 's'}}">
                  <item :item.sync="item"
                        @tap="bindClickItem" />
                </view>
              </repeat>
              <view class="home-block"></view>
            </view>
          </scroll-view>
        </view>
      </view>
    </scroll-view>
    <van-tabbar active="{{0}}"
                active-color="#FF772D"
                bind:change="onChangeTabbar">
      <van-tabbar-item>
        <image slot="icon"
               src="https://pub.file.k12.vip/zlk_weapp/tabar-icon-files-def.png"
               mode="aspectFit" />
        <image slot="icon-active"
               src="https://pub.file.k12.vip/zlk_weapp/tabar-icon-files-sel.png"
               mode="aspectFit" />
        资料库
      </van-tabbar-item>
      <van-tabbar-item>
        <image slot="icon"
               src="https://pub.file.k12.vip/zlk_weapp/tabar-icon-coin-def.png"
               mode="aspectFit" />
        <image slot="icon-active"
               src="https://pub.file.k12.vip/zlk_weapp/tabar-icon-coin-sel.png"
               mode="aspectFit" />
        赚下载币
      </van-tabbar-item>
      <van-tabbar-item>
        <image slot="icon"
               src="https://pub.file.k12.vip/zlk_weapp/tabar-icon-industrious-def.png"
               mode="aspectFit" />
        <image slot="icon-active"
               src="https://pub.file.k12.vip/zlk_weapp/tabar-icon-industrious-sel.png"
               mode="aspectFit" />
        勤奋榜
      </van-tabbar-item>
      <van-tabbar-item>
        <image slot="icon"
               src="https://pub.file.k12.vip/zlk_weapp/tabar-icon-my-def.png"
               mode="aspectFit" />
        <image slot="icon-active"
               src="https://pub.file.k12.vip/zlk_weapp/tabar-icon-my-sel.png"
               mode="aspectFit" />
        我的
      </van-tabbar-item>
    </van-tabbar>
    <view class="home-mask"
          wx:if="{{showMask}}">
      <view class="home-select-class"
            @tap.stop="bindClick">
        <text>{{gradeName}}</text>
        <van-icon name="arrow-down" />
      </view>
      <image src="https://pub.file.k12.vip/zlk_weapp/zlk/guide.png"
             mode="widthFix" />
    </view>
    <Share :hide.sync="hideGif" :img.sync="shareFirendInfo.qrcode"></Share>
    <CollectGoldPopup :title.sync="collectTitle"
                      :subtitle.sync="collectSubtitle"
                      :num.sync="collectNum"
                      :show.sync="showPopup">
      <view slot="message"
            wx:if="{{collectMessage}}">此后将不再弹窗提示此类奖励信息 请到 <text>赚下载币>查看收益</text> 中查看</view>
    </CollectGoldPopup>
  </view>
</template>

<script>
import wepy from 'wepy'
import { connect } from 'wepy-redux'
import api from '../../request/api'
import tabbarMixin from '../../mixins/tabbar.js'
import Item from '../../components/item'
import CollectGoldPopup from '../../components/collectGoldPopup'
import Share from '../../components/share'
import noDataTemplate from '../../components/noDataTemplate'
import { NumberAnimate, toThousands } from '../../utils'


let hideTime = null

@connect({
  userInfo (state) {
    return state.user.userInfo
  },
  shareFirendInfo(state) {
    return state.user.shareFirendInfo
  }
})
export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '获课资料库',
    usingComponents: {
      "van-tab": "../../vant/tab/index",
      "van-tabs": "../../vant/tabs/index"
    }
  }

  components = {
    item: Item,
    CollectGoldPopup,
    Share,
    noDataTemplate
  }

  mixins = [tabbarMixin]

  data = {
    isEmpty: false,
    hideGif: false,
    isAnimate: false,
    showMask: false,
    showPopup: false,
    isShowIcon: false,
    height: 0,
    num: 0,
    active: 0,
    scrollLeft: 0,
    scrollTop: 0,
    materialList: [],
    catalogList: [],
    subjectList: [],
    bannerList: [],
    isTop: false,
    isScrollY: false,
    subjectId: 0,
    catalogId: 0,
    time: null,
    total: 0,
    pagination: {
      current: 1,
      size: 6,
      hot: false,
      newly: false
    },
    emptyInfo: {
      tip: '暂时没有相关的资料！',
      url: 'https://pub.file.k12.vip/empty/empty-search.png'
    },
    page: 0,
    isBottom: false,
    collectNum: 0,
    collectTitle: '',
    collectSubtitle: '',
    collectMessage: false
  }

  computed = {
    gradeName () {

      let { userInfo } = this
      if (!userInfo) {
        return '选择年级'
      } else {
        if (userInfo.gradeName) {
          return userInfo.gradeName
        } else {
          return '选择年级'
        }
      }

    }
  }

  watch = {
    userInfo (n, o) {
      if (!n.grade) {
        this.showMask = true
      }
      if (!o.grade && this.subjectId && n.grade) {
        this.getCatalogList(this.subjectId)
      }
    }
  }

  methods = {
    touchend() {
      hideTime = setTimeout(() => {
        hideTime = null
      }, 300);
      this.hideGif = false
    },
    onScroll () {
      if(hideTime) return
      this.hideGif = true
    },
    closeMask () {
      this.showMask = false
    },
    onPosterSuccess (e) {
      const { detail } = e;
      wx.previewImage({
        current: detail,
        urls: [detail]
      })
    },
    onPosterFail (err) {
      console.error(err);
    },
    bindClick () {
      wx.navigateTo({ url: '/pages/selectClass/selectClass' });
    },
    bindScrolltolower (n) {
      if (this.time) return
      this.time = setTimeout(() => {
        this.time = null
      }, 500);
      if (this.materialList.length > 3) {
        this.isScrollY = true

      }
      this.isBottom = true
    },
    bindScrolltoupper (n) {
      if (this.time) return
      this.time = setTimeout(() => {
        this.time = null
      }, 500);
      this.isScrollY = false
      this.isBottom = false
    },
    bindClickTab (e) {
      let { index } = e.detail
      let subjectId = this.subjectList[index].id
      this.scrollTop = this.scrollTop ? 0 : 1
      this.getCatalogList(subjectId)
    },
    async bindClickCatalog (id) {
      this.catalogId = id
      this.pagination.size = 6
      this.scrollTop = this.scrollTop ? 0 : 1
      this.page = 0
      await this.getListMaterial(id)
      setTimeout(() => {
        if (this.isBottom) {
          this.isScrollY = true
        }
        this.$apply()
      }, 500);
    },
    bindClickSearch () {
      wx.navigateTo({ url: '/pages/search/search?catalogId=' + this.catalogId });
    },
    bindLoadItem () {
      this.pagination.size = this.pagination.size + 3
      if (this.total != this.materialList.length) {
        this.getListMaterial()
      }
    },
    async bindClickSort (type) {
      this.pagination.hot = type ? true : false
      this.pagination.newly = type ? false : true
      this.pagination.size = 6
      this.page = 0
      this.materialList = []
      await this.getListMaterial()
    }
  }

  events = {
    'click-item' (id, $event) {
      wx.navigateTo({ url: '/pages/details/details?id=' + id });
    },
    'confim' () {
      this.showPopup = false
      this.$apply()
    }
  }


  onShow () {
    this.getBannerList()
    this.getSubjectList()
    this.getUserAccountMsg()
  }

  onHide() {
    this.materialList = []
  }

  onReady () {

    this.getCountTotal()
  }
  //
  // getAccountInfo() {
  //   api.userAccount.accountInfo().then(({data}) => {
  //     this.isShowIcon = data.resultData.hasIncome
  //     this.$apply()
  //   })
  // }

  /**
   * @author hujinhui
   * @description 获取首页banner列表
   */
  getBannerList () {
    api.banner.listShow().then(({ data }) => {
      this.bannerList = data.resultData
      this.$apply()
    })
  }

  /**
   * @author hujinhui
   * @description 获取科目
   */
  getSubjectList () {
    api.material.subjectList().then(({ data }) => {
      this.subjectList = data.resultData
      this.subjectId = data.resultData[0].id
      if (this.userInfo.grade) {
        this.getCatalogList(data.resultData[0].id)
      }
      this.$apply()
    })
  }

  async getCatalogList (subject) {

    let { grade } = this.userInfo
    await api.material.catalogList({
      subject,
      grade
    }).then(({ data }) => {
      this.scrollLeft = 0
      this.catalogList = data.resultData
      this.catalogId = data.resultData[0].id
      this.pagination.size = 6
      this.page = 0
      this.$apply()
    })
    this.getListMaterial()
  }

  getListMaterial () {
    let { current, hot, newly, size } = this.pagination
    return api.material.listMaterial({
      catalogId: this.catalogId,
      current,
      hot,
      newly,
      size
    }).then(({ data }) => {
      setTimeout(() => {
        this.page += 6
        this.$apply()
      }, 500);
      if(!data.resultData.records.length) {
        this.isEmpty = true
      } else {
        this.isEmpty = false
      }
      this.total = data.resultData.total
      this.materialList = data.resultData.records
      this.$apply()
    })
  }

  getUserAccountMsg () {
    api.task.getUserAccountMsg({
      userAccountMsgType: 2
    }).then(({ data }) => {
      if (data.resultData) {

        this.collectNum = data.resultData.currency
        this.collectTitle = '你成功邀请“' + data.resultData.name + '"加入'
        this.collectSubtitle = `恭喜获得${data.resultData.currency}下载币`
        this.collectMessage = true
        this.showPopup = true
        this.$apply()
      }

    })
  }

  getCountTotal () {
    api.material.countTotal().then(({ data }) => {
      this.NumberAnimate(data.resultData)
    })
  }


  /**
   * @author hujinhui
   * @description 数字动画
   */
  NumberAnimate (num) {
    let n3 = new NumberAnimate({
      from: num,
      speed: 2000,
      refreshTime: 100,
      decimals: 0,
      onUpdate: () => {
        this.num = toThousands(n3.tempValue)
        this.$apply()
      }
    });
  }




}
</script>
